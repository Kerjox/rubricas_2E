@model IEnumerable<PracticaExamenEscuela.Models.Asignaturas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
  
<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("ListByEtapaCurso", "ListByEtapaCurso")
</p>
<table class="table">
    <tr>
      <th>
        @Html.DisplayName("Nombre Asignatura")
      </th>
      <th>
        @Html.DisplayName("Curso")
      </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.NombreAsignatura)
      </td>
      <td>
        @foreach (var asignaturaCurso in item.AsignaturasCursos) {
          
          @Html.DisplayName(asignaturaCurso.Cursos.NombreCurso + " ")
        }

      </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
