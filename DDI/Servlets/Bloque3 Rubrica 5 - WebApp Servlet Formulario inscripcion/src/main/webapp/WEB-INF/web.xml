<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

	<servlet>
		<servlet-name>personaServlet</servlet-name>
		<servlet-class>com.ubalde.bloque3_rubrica_5.servlets.PersonaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>personaServlet</servlet-name>
		<url-pattern>/send-user</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>deletePersona</servlet-name>
		<servlet-class>com.ubalde.bloque3_rubrica_5.servlets.deletePersona</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deletePersona</servlet-name>
		<url-pattern>/delete-user</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>listPersonas</servlet-name>
		<servlet-class>com.ubalde.bloque3_rubrica_5.servlets.listPersonas</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>listPersonas</servlet-name>
		<url-pattern>/list-users</url-pattern>
	</servlet-mapping>
</web-app>