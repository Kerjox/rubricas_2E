<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- examen.hdd action window -->
    <record id="hdd_action" model="ir.actions.act_window">
        <field name="name">examen.hdd.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">examen.hdd</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>

    <!-- examen.hdd form view -->
    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">examen.hdd.view.form</field>
        <field name="model">examen.hdd</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="capacidad"/>
                        <field name="tipo"/>
                        <field name="portatil_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- examen.hdd tree view -->
    <record id="model_name_view_tree" model="ir.ui.view">
        <field name="name">examen.hdd.view.tree</field>
        <field name="model">examen.hdd</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="capacidad"/>
                <field name="tipo"/>
                <field name="portatil_id"/>
            </tree>
        </field>
    </record>
</odoo>